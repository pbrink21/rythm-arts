<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Main Menu</title>
  <link rel="stylesheet" href="style.css">

</head>

<body class="mainbackground">
  <div id="menu bar" class="topnav">
    <div class="topnav-centered">
      <ul>
        <li><a class="active" href="/mainmenu">Game</a></li>
        <li><a class="navButton" href="/highscore">Hi-Score</a></li>
        <li><a class="navButton" href="/shop">Shop</a></li>
      </ul>
    </div>
    <img src="/images/logo_cropped.png" width="300px" height="60px" class="ripoff">

    <div class="dropdown">
      <a class="navButton" href="/">Account</a>

    </div>
  </div>

  <div id="game bar" class="bottombar">
    <div class="gameSetting">
      <form id="gameSet">
        <select name="difficulty">
          <option value="0">Easy</option>
          <option value="1">Medium</option>
          <option value="2">Hard</option>
        </select>
        <select name="theme">
          <option value="Default">Default</option>
          <option value="Dawn Winery">Dawn Winery</option>
          <option value="Hotto Dogu">Hotto Dogu</option>
          <option value="Umbrella">Umbrella</option>
        </select>
        <input type="button" value="Play!" onClick="setCookie()">
      </form>
    </div>
  </div>

  <audio id="audio" src="lobbyMusic.mp3"></audio>

  <script>
    //document.addEventListener('click', musicPlay);
    //function musicPlay() {
    //	 document.getElementById('audio').play();
    //		document.removeEventListener('click', musicPlay);
    //}

    function myFunction() {
      document.getElementById("myDropdown").classList.toggle("show");
    }
    function setCookie() {
      var d = document.forms["gameSet"]["difficulty"].value;
      var t = document.forms["gameSet"]["theme"].value;
      var p = new Date();
      p.setTime(p.getTime() + (3 * 24 * 60 * 60 * 1000));
      var expires = "expires=" + p.toUTCString();
      document.cookie = "diff=" + d + ";" + expires + "path=/";
      document.cookie = "theme=" + t + ";" + expires + "path=/";
      window.location.replace("/board");

    }
  </script>


</body>

</html>